<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:windowBackground">@color/background</item>
        <!--        <item name="android:fontFamily">roboto</item>-->
        <item name="android:textStyle">normal</item>
        <!-- custom attrs -->
        <item name="colorOnBackgroundText">@color/onBackgroundText</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnBackgroundSecondaryText">@color/onBackgroundSecondaryText</item>
        <item name="colorContentText">@color/contentText</item>
        <item name="colorSelected">@color/selectedColor</item>
        <item name="colorFiltered">@color/filtered</item>
        <item name="colorFilteredDark">@color/filteredDark</item>
        <item name="colorDimmedGrey">@color/dimmedGrey</item>
        <item name="drawableFilterFab">@drawable/ic_filter</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimaryTextSelected">@color/textPrimarySelected</item>
        <item name="colorSelectedDrawerText">@color/selectedDrawerText</item>
        <item name="colorFilteredDrawerText">@color/filteredDrawerText</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/textPrimary</item>
    </style>

    <style name="AppTheme.SearchTextView" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/material_spinner_box</item>
        <item name="android:textColorHint">?attr/colorContentText</item>
        <item name="hintTextColor">?attr/colorContentText</item>
    </style>

    <!-- Style for material design 'Spinner'-->
    <style name="AppTheme.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/material_spinner_box</item>
        <item name="android:textColorHint">?attr/colorContentText</item>
        <item name="hintTextColor">?attr/colorContentText</item>
        <item name="materialThemeOverlay">@style/AppTheme.ExposedDropdownMenu.MaterialThemeOverlay
        </item>
    </style>

    <style name="AppTheme.ExposedDropdownMenu.MaterialThemeOverlay" parent="ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="colorSurface">?attr/colorBackground</item>
    </style>
</resources>
