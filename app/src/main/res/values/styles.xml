<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FilterTextView" parent="Widget.AppCompat.TextView">
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/onBackgroundText</item>
        <item name="android:textSize">@dimen/filter_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="FilterSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/onBackgroundText</item>
        <item name="android:textSize">@dimen/filter_text_size</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginTop">@dimen/filter_selectors_top_margin</item>
    </style>

    <style name="FilterButton" parent="Widget.AppCompat.Button">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/filter_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/filter_buttons_top_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
    </style>

    <style name="SettingsSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/onBackgroundText</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_marginBottom">@dimen/settings_items_margin</item>
    </style>
</resources>