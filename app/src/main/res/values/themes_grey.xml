<resources>

    <style name="Grey_AppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/grey_primary</item>
        <item name="colorPrimaryDark">@color/grey_primaryDark</item>
        <item name="colorAccent">@color/grey_accent</item>
        <item name="android:textColorPrimary">@color/grey_textPrimary</item>
        <item name="android:windowBackground">@color/grey_background</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <!-- custom attrs -->
        <item name="colorOnBackgroundText">@color/grey_onBackgroundText</item>
        <item name="colorBackground">@color/grey_background</item>
        <item name="colorOnBackground">@color/grey_onBackground</item>
        <item name="colorOnBackgroundSecondaryText">@color/grey_onBackgroundSecondaryText</item>
        <item name="colorContentText">@color/grey_contentText</item>
        <item name="colorSelected">@color/grey_selectedColor</item>
        <item name="colorFiltered">@color/grey_filtered</item>
        <item name="colorFilteredDark">@color/grey_filteredDark</item>
        <item name="colorDimmedGrey">@color/grey_dimmedGrey</item>
        <item name="drawableFilterFab">@drawable/ic_filter_white</item>
        <item name="drawerArrowStyle">@style/Grey_DrawerArrowStyle</item>
        <item name="colorPrimaryTextSelected">@color/grey_textPrimarySelected</item>
        <item name="colorSelectedDrawerText">@color/selectedDrawerText</item>
    </style>

    <style name="Grey_DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/grey_textPrimary</item>
    </style>
</resources>
