<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity"
    app:startDestination="@id/articles_list_fragment">

    <fragment
        android:id="@+id/articles_list_fragment"
        android:name="com.gmail.yaroslavlancelot.screens.articles.list.ArticlesListFragment"
        android:label="@string/all_posts_screen">
        <action
            android:id="@+id/action_articlesToPreview"
            app:destination="@id/article_preview_fragment"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/article_preview_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/article_preview_fragment"
        android:name="com.gmail.yaroslavlancelot.screens.articles.details.PreviewFragment"
        android:label="@string/detailed_screen">
        <argument
            android:name="articleUrl"
            app:argType="string" />
    </fragment>
</navigation>