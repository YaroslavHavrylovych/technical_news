<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/nav_header_padding"
    android:paddingTop="@dimen/nav_header_padding_top"
    android:paddingEnd="@dimen/nav_header_padding"
    android:paddingBottom="@dimen/nav_header_padding">

    <ImageView
        android:id="@+id/theme_switcher"
        android:layout_width="@dimen/nav_header_theme_size"
        android:layout_height="@dimen/nav_header_theme_size"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/nav_header_theme_padding"
        android:src="@drawable/ic_sun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/nav_header_icon_size"
        android:layout_height="@dimen/nav_header_icon_size"
        android:layout_marginBottom="@dimen/nav_header_icon_margin"
        android:src="@drawable/ic_logo_white_full"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/nav_header_name_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>