<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/nav_header_padding_top">

    <ImageView
        android:layout_width="@dimen/nav_header_icon_size"
        android:layout_height="@dimen/nav_header_icon_size"
        android:layout_margin="@dimen/nav_header_icon_margin"
        android:src="@drawable/ic_logo_white_full" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/nav_header_name_margin"
        android:layout_marginEnd="@dimen/nav_header_name_margin"
        android:layout_marginBottom="@dimen/nav_header_name_margin"
        android:text="@string/app_name"
        android:textColor="@color/onBackground"
        android:textSize="@dimen/nav_header_name_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_separator"
        android:background="@color/primaryDark" />

</LinearLayout>